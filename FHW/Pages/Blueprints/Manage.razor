<Modal @ref="mBpJSON" Title="Blueprint JSON">
    <BodyTemplate>
        <textarea class="w-100" @bind="blueprintJSON"></textarea>
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Danger" @onclick="EncryptBP">Зашифровать</Button>
    </FooterTemplate>
</Modal>